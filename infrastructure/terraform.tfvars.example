# Copy this file to terraform.tfvars and fill in the values

# AWS region for deployment
aws_region = "eu-west-2"

# Namespace prefix for resources
namespace = "ndx"

# GOV.UK Notify template ID for cost report emails
# Create this template in your GOV.UK Notify account
# Required personalisation fields: account_id, lease_id, total_cost, start_date, end_date, cost_breakdown
govuk_notify_template_id = "your-template-id"

# Hours to wait after lease ends before sending cost report
# AWS billing takes up to 24 hours to reconcile
cost_report_delay_hours = 24
